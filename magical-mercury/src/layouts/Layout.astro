---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg" href="/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "Apfel Grotezk Brukt";
		src: url(/Post-Mors/ApfelGrotezk-Brukt.woff2) format("woff");
	}
	@font-face {
		font-family: "Apfel Grotezk Fett";
		src: url(/Post-Mors/ApfelGrotezk-Fett.woff2) format("woff");
	}
	@font-face {
		font-family: "Apfel Grotezk Mittel";
		src: url(/Post-Mors/ApfelGrotezk-Mittel.woff2) format("woff");
	}
	@font-face {
		font-family: "Apfel Grotezk Regular";
		src: url(/Post-Mors/ApfelGrotezk-Regular.woff2) format("woff");
	}
	@font-face {
		font-family: "Apfel Grotezk Satt";
		src: url(/Post-Mors/ApfelGrotezk-Satt.woff2) format("woff");
	}

	.btn {
		text-decoration: none;
		padding: 8px 23px;
		border-radius: 25px;
		border: 1px solid #fff;
		background-color: transparent;
		color: white;
		font-family: "Apfel Grotezt Regular";
		font-size: 1rem; /* Cambiar a rem para que se ajuste al tama√±o de la fuente */
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		cursor:pointer;
	}
  @media only screen and (max-width: 1280px) {
	.btn
	{
		padding: 8px 12px;
	}
  }

</style>
