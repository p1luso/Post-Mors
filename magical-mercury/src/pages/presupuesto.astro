---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="Presupuesto">
    <main>
        <div class="container">
            <div id="nav">
                <img class="logo" src="/logo.png" />
                <Nav />
            </div>
            <div class="form-container" id="form-container">
                <h2 class="presupuesto-title">Pedir presupuesto</h2>
                <form class="presupuesto-form" id="presupuesto-form">
                    <div class="input-group">
                        <input type="text" id="name" name="name" placeholder="Nombre" required>
                        <input type="email" id="email" name="email" placeholder="Email" required>
                    </div>
                    <textarea id="message" name="message" placeholder="Hola! Necesitaría saber el presupuesto para..." required></textarea>
                    <button type="submit" class="btn btn-form">Enviar mensaje</button>
                </form>
            </div>
            <div class="success-container hidden" id="success-container">
                <img src="/check_circle.png" class="success-icon">
                <h2 class="success-title">Tu solicitud fue enviada con éxito</h2>
                <p class="success-text">Recibirás un mail en los próximos días con la resolución de tu presupuesto</p>
                <a href="/" class="btn btn-form">Volver al inicio</a>
            </div>
        </div>
    </main>
</Layout>

