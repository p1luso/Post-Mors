---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="For Artist">
    <main>
        <div class="container">
            <div id="nav">
                <img class="logo" src="/logo.png" />
                <Nav />
            </div>
            <section class="hero">
                <h1 class="hero-tittle">For Artists</h1>
                <p class="hero-text">
                    Construcción de Roll-Outs, merch, artes de tapa, visuales y
                    estética para <span id="hero-span">artistas argentinos</span
                    >.
                </p>
            </section>

            <section class="services">
                <div class="service service-fuga-mediante">
                    <h2 class="services-titles">Fuga Mediante</h2>
                    <div class="buttons">
                        <button class="btn btn-presupuesto">Ver trabajo</button>
                    </div>
                </div>
                <div class="service service-vamos-pamos">
                    <h2 class="services-titles">
                        Vamos Pamos & The New Seasons
                    </h2>
                    <div class="buttons">
                        <button class="btn btn-presupuesto">Ver trabajo</button>
                    </div>
                </div>
            </section>

            <section class="offerings">
                <h2 class="offering-title">Que ofrecemos</h2>
                <div class="box-container">
                    <div class="box">
                        <div class="box-content complete-pack">
                            <h1 class="box-tittle">Pack Completo</h1>
                            <p class="box-text">
                                Arte de tapa, Flyers para redes, visuales,
                                merch, Spotify Canvas.
                            </p>
                            <div class="buttons">
                                <button class="btn btn-presupuesto"
                                    >Pedir presupuesto</button
                                >
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <div class="box-content">
                            <h1 class="box-tittle">Arte de Tapa</h1>
                            <p class="box-text">
                                Distintas variaciones para la portada de tu
                                single, EP o LP.
                            </p>
                            <div class="buttons">
                                <button class="btn btn-presupuesto"
                                    >Pedir presupuesto</button
                                >
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <div class="box-content">
                            <h1 class="box-tittle">Roll-Out</h1>
                            <p class="box-text">
                                Realizamos únicamente piezas gráficas para redes
                                sociales a partir de tu arte de tapa ya
                                existente.
                            </p>
                            <div class="buttons">
                                <button class="btn btn-presupuesto"
                                    >Pedir presupuesto</button
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
</Layout>

<style>
  #nav {
    display: flex;
    position: relative;
    align-items: center;
    justify-content: center;
    padding: 20px; /* Espacio alrededor del contenido */
}

body,
main {
    min-height: 100%;
    margin: 0;
    padding: 0;
    background: #262525;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.container {
    padding: 0px 2%;
}

.logo {
    width: 5.8%;
    height: 58%;
    flex-shrink: 0;
    display: absolute;
    position: absolute;
    top: 25%;
    left: 0%;
}

.hero-tittle {
    color: #fff;
    font-family: "Apfel Grotezk";
    font-size: 50px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
}

.hero-text {
    width: 62%;
    color: #fff;
    font-family: "Apfel Grotezk";
    font-size: 50px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

#hero-span {
    font-weight: bold;
}

.services {
    display: flex;
    justify-content: start;
    gap: 10px; /* Reduce el espacio entre los elementos */
    padding: 20px 0;
}

.service {
    text-align: center;
    height: 35vh; /* Ajusta la altura según tu imagen */
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: start;
    color: white;
    border-radius: 20px;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    padding: 10px;
}

.service-fuga-mediante {
    background-image: url("/public/fuga-mediante.png");
    width: 30em; /* Ajusta el ancho según tu imagen */
}

.service-vamos-pamos {
    background-image: url("/public/vamosPamos.png");
    width: 30em; /* Ajusta el ancho según tu imagen */
}

.services-titles {
    font-family: "Neue Haas Grotesk Display Pro";
    color: white;
    font-size: 25px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    padding: 0 3.5%;
}

.buttons {
    display: flex;
    justify-content: start;
    padding: 3.5%;
}

.btn {
    color: white;
    border-color: white;
}

.btn:hover {
    transition: transform 0.3s ease; /* Añade una transición suave para el transform */
    transform: scale(1.1); /* Hace que el botón sea un 10% más grande */
    background-color: black; /* Cambia el color de fondo a negro */
    color: white !important; /* Forza el cambio de color del texto a blanco */
}

.box-container {
    display: flex;
    gap: 20px; /* Espacio entre las cajas */
    flex-wrap: wrap; /* Permite que las cajas se envuelvan en varias líneas si es necesario */
    justify-content: start;
    width: 100%;
    margin-bottom: 10%;
}

.box {
    border-radius: 29px;
    background-color: white;
    width: 30%; /* Ajusta el ancho según tus necesidades */
    height: auto; /* Ajusta la altura automáticamente */
    flex-grow: 1;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Asegura que el botón esté alineado correctamente */
}

.box .btn {
    color: black;
    border-color: black;
}
.box .buttons {
    padding: 10px; /* Ajusta el padding según sea necesario */
}

.box-content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Asegura que el contenido esté alineado correctamente */
    height: 100%; /* Asegura que el contenido llene toda la altura del contenedor */
}

.box-text {
    color: black;
    font-family: "ApfelGrotezkFett";
    font-size: 28.602px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    flex-grow: 1; /* Permite que el texto crezca para llenar el espacio disponible */
}

.box-tittle {
    color: black;
    font-family: "ApfelGrotezkSatt";
    font-size: 28.602px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
}

.complete-pack {
    border-radius: 29px;
    color: black;
    background: radial-gradient(
        216.91% 103.24% at 97.78% 8.48%,
        #b22a2a 0%,
        #7271d1 100%
    );
}

.complete-pack .box-text, .complete-pack .box-tittle{
    color: white;
}

.complete-pack .btn {
    color: white;
    border-color: white;
}

.offering-title {
    width: 636px;
    color: #fff;
    font-family: "Apfel Grotezk";
    font-size: 50px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
}

</style>
