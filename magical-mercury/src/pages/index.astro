---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="POST MARS">
  <main>
    <div id="nav">
      <Nav />
    </div>
    <div class="grid-container">
      <div class="left-side">
        <div class="leftSide-container">
          <div class="logo-container">
            <img src="/Post-Mors/logo.png" alt="Logo" class="logo" />
          </div>
          <div class="subtitle-container">
            <p class="subtitle-text">
              Espacio de innovación y diseño. Argentino. <br /><span
                >0 prejuicios.</span
              >
            </p>
          </div>
          <div class="ls-buttons">
            <button class="btn btn-ls">8-MANIFESTO</button>
            <button class="btn btn-ls">¿Quiénes somos?</button>
            <button class="btn btn-ls">Instagram</button>
            <button class="btn btn-ls">LinkedIn</button>
            <button class="btn btn-ls">Behance</button>
            <button class="btn btn-ls" id="contact-btn">Contacto</button>
          </div>
          <div class="form-container hidden" id="contact-form-container">
            <!-- Campos del formulario -->
            <p class="form-text">¡Contáctate con nosotros!</p>
            <div class="form-group">
              <form method="POST" action="/Post-Mors/mail.php">
                <div class="up-form-group">
                  <input
                    class="up-text"
                    type="text"
                    id="up-text1"
                    name="up-text1"
                    placeholder="Nombre"
                  />
                  <input
                    class="up-text"
                    type="text"
                    id="up-text2"
                    name="up-text2"
                    placeholder="Email"
                  />
                </div>
                <textarea
                  id="textarea"
                  name="textarea"
                  placeholder="Contanos que necesitas..."></textarea>
                <input type="submit" value="Enviar Mensaje" id="mail-button" />
              </form>
            </div>
            <!-- Otros campos del formulario -->
          </div>
        </div>
      </div>

      <div class="right-side">
        <div class="box-container">
          <div class="box">
            <div class="box-content">
              <h1 class="box-tittle">For Artists</h1>
              <p class="box-text">
                Construcción de Roll-Outs, artes de tapa, visuales y estética
                para artistas argentinos.
              </p>
              <div class="buttons">
                <button class="btn btn-portfolio">Ver portfolio</button>
                <button class="btn btn-presupuesto">Pedir presupuesto</button>
              </div>
            </div>
          </div>
          <div class="box">
            <div class="box-content">
              <h1 class="box-tittle">Branding</h1>
              <p class="box-text">
                Construcción de sistema complejo de Diseño de marca, rebrading o
                re-styling.
              </p>
              <div class="buttons">
                <button class="btn btn-presupuesto">Pedir presupuesto</button>
              </div>
            </div>
          </div>
          <div class="box">
            <div class="box-content">
              <h1 class="box-tittle">UX/UI</h1>
              <p class="box-text">
                Prototipado de app, web app o landing page para tu
                emprendimiento o empresa.
              </p>
              <div class="buttons">
                <button class="btn btn-portfolio">Ver portfolio</button>
                <button class="btn btn-presupuesto">Pedir presupuesto</button>
              </div>
            </div>
          </div>
          <div class="box">
            <div class="box-content">
              <h1 class="box-tittle">Merch</h1>
              <p class="box-text">
                Merchandising para artistas, empresas o emprendimientos.
              </p>
              <div class="buttons">
                <button class="btn btn-portfolio">Ver portfolio</button>
                <button class="btn btn-presupuesto">Pedir presupuesto</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Estilos generales */

  body,
  html,
  main {
    height: 100%;
    margin: 0;
    padding: 0;
    background-image: url("/Post-Mors/background.gif");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  main {
    height: 100%;
    margin: 0;
    padding: 0;
    position: relative;
    align-items: center;
  }
  .logo {
    width: 40%; /* Cambiar a % para que se ajuste al tamaño de la pantalla */
  }
  .logo-container {
    margin-bottom: -3%;
  }

  #nav {
    display: flex;
    position: relative;
    align-items: center;
    justify-content: center;
    padding: 20px; /* Espacio alrededor del contenido */
  }

  .grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Divide la pantalla en dos columnas iguales */
    margin: 0 20%; /* Centrar el contenedor horizontalmente */
    max-width: 1200px; /* Ancho máximo del contenedor */
    padding: 20px; /* Espacio alrededor del contenido */
  }

  .left-side {
    grid-column: 1; /* Asigna la columna 1 al lado izquierdo */
    margin-top: 3%;
  }

  .right-side {
    grid-column: 2; /* Asigna la columna 2 al lado derecho */
  }

  .box-container {
    display: block;
    align-items: center;
    justify-self: center;
    margin-left: 5%; /* Cambiar a % para que se ajuste al tamaño de la pantalla */
    overflow-y: auto; /* Hace que el contenido sea desplazable */
    max-height: calc(80vh); /* Resta 50px del 100vh */
    scrollbar-width: none; /* Oculta la barra de desplazamiento para Firefox */
    -ms-overflow-style: none; /* Oculta la barra de desplazamiento para Internet Explorer */
  }

  .box-container::-webkit-scrollbar {
    display: none; /* Oculta la barra de desplazamiento para Chrome, Safari y Edge */
  }

  .box {
    border-radius: 29px;
    border: 1px solid #fff;
    width: 95%; /* Cambiar a % para que se ajuste al tamaño de la pantalla */
    margin-bottom: 5%;
    transition:
      background-color 0.3s ease,
      color 0.3s ease; /* Añade una transición suave */
  }

  .box:hover {
    background-color: white;
    color: black;
  }
  .box:hover .box-text,
  .box:hover .box-tittle,
  .box:hover .btn {
    color: black; /* Cambia el color del texto a negro cuando el mouse está encima de .box */
  }

  .box:hover .btn {
    border: 1px solid black;
  }

  .box:hover .btn:hover {
    transition:
      background-color 0.3s ease,
      color 0.3s ease; /* Añade una transición suave */
    background-color: black;
    color: white;
    border: 1px solid white;
  }

  .box-content {
    padding: 20px;
  }

  .box-text {
    color: #fff;
    font-size: 1.5rem; /* Cambiar a rem para que se ajuste al tamaño de la fuente */
    text-align: left;
    font-style: normal;
    font-weight: 900;
    line-height: normal;
  }

  .box-tittle {
    color: #fff;
    font-size: 1.5rem; /* Cambiar a rem para que se ajuste al tamaño de la fuente */
    font-weight: 700;
    line-height: normal;
    text-align: left;
  }

  .buttons {
    display: flex;
    gap: 10px;
  }

  .subtitle-container {
    display: flex;
    width: 636px;
    align-items: left;
    justify-content: left;
  }
  .subtitle-text {
    color: #fff;
    font-family: "Apfel Grotezk";
    font-size: 50px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-align: left;
  }
  .subtitle-text span {
    color: #fff;
    font-family: "Apfel Grotezk";
    font-size: 50px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }

  .ls-buttons {
    display: block;
    align-items: left;
    justify-content: left;
    width: 90%;
    margin-top: -4%;
  }

  .btn-ls {
    margin: 1% 0.5%;
    color: #fff;
    font-family: "Apfel Grotezk";
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .btn:hover {
    background-color: white;
    color: black;
  }

  .form-group {
    display: block;
    flex-direction: column;
    align-items: left;
    justify-content: center;
    width: 93%;
  }

  .form-container {
    display: flex;
    flex-direction: column;
    align-items: left;
    justify-content: center;
  }
  .form-text {
    color: #fff;
    font-family: "Apfel Grotezk";
    font-size: 25px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .form-container.show {
    display: block;
  }

  .form-group .up-text {
    width: 41%;
    height: 54px;
    font-family: "Apfel Grotezk";
    margin-right: 1%;
    padding-left: 5%;
    font-size: 25px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    background-color: transparent;
    border: 1px solid #fff;
    border-radius: 15px;
  }

  .form-group textarea {
    width: 90%;
    font-family: "Apfel Grotezk";
    height: 123px;
    padding-left: 5%;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    background-color: transparent;
    border: 1px solid #fff;
    border-radius: 15px;
  }
  .form-group input,
  .form-group textarea {
    margin-bottom: 2%;
  }

  textarea {
    padding-top: 5%;
  }

  #mail-button {
    padding: 8px 23px;
    border-radius: 25px;
    border: 1px solid #fff;
    background-color: white;
    color: #000;
    font-family: "Apfel Grotezk";
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  input::placeholder,
  textarea::placeholder {
    color: #fff;
  }
</style>

<script>
  const contactBtn = document.getElementById("contact-btn");
  const contactFormContainer = document.getElementById(
    "contact-form-container"
  );

  if (contactBtn) {
    contactBtn.addEventListener("click", () => {
      if (contactFormContainer) {
        contactFormContainer.style.display = "block";
      }
    });
  }
  if (contactFormContainer) {
    contactFormContainer.style.display = "block";
  }
</script>
