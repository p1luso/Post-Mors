<style>
    .navbar {
        display: inline-flex; /* Ajuste el contenido al tama√±o del contenido interior */
        border-radius: 10px;
        background: #4d4d4d;
        color: white;
        align-items: center;
        justify-content: center;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .navbar-navigation {
        display: flex;
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .navbar-list {
        margin: 0 20px;
        font-size: 20px;
        font-family: "Apfel Grotezk";
    }

    .navbar-hip {
        color: white;
        text-decoration: none;
        padding: 15px 20px;
        display: block;
    }
    .navbar-hip.active {
    color: black;
    background: #fff;
    border-radius: 10px;
}

    
    .navbar-list.active .navbar-hip {
        color: black;
        background: #fff;
        border-radius: 10px;
    }
</style>

<script>
    console.log("Javascript");

    document.addEventListener('DOMContentLoaded', () => {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('.navbar-hip');
        let activeLink: HTMLElement | null = null;

        navLinks.forEach((link: Element) => {
            const htmlLink = link as HTMLElement;
            if (htmlLink.getAttribute('href') === currentPath) {
                htmlLink.classList.add('active');
                activeLink = htmlLink;
            }

            htmlLink.addEventListener('click', () => {
                if (activeLink) activeLink.classList.remove('active');
                htmlLink.classList.add('active');
                activeLink = htmlLink;
            });
        });
    });
</script>
